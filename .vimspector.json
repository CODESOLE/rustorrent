{
  "configurations": {
    "Launch with args: Cargo.toml": {
      "adapter": "CodeLLDB",
      "configuration": {
        "type": "rust",
        "request": "launch",
        "program": "${workspaceRoot}/target/debug/rustorrent",
        "cwd": "${workspaceRoot}",
        "env": {
          "BASEPATH": "${workspaceRoot}"
        },
        "args": [
          "torrents/sample.torrent"
        ]
      }
    }
  }
}
